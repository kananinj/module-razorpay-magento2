<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="checkout-razorpay" type="host">checkout.razorpay.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="api-razorpay" type="host">api.razorpay.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="razorpay" type="host">*.razorpay.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>